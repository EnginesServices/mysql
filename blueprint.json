{
  "title": "mysql server",
  "description": "mysql",
  "memory_usage": 456,
  "licenses": [
  ],
  "binding_anchor": {
    "variables": {
      "flavor": "mysql2",
      "host": "^^identifier^^.^^universe.host^^",
      "name": "^^identifier^^",
      "username": "^^identifier^^_user",
      "password": "^^random(10)^^",
      "collation": "utf8_general_ci",
      "full_access": "0",
      "backup_support": true
    }
  },
  "bindings": [
    {
      "descriptor": {
        "repository": "https://github.com/MarkRatjens/volmgr.git",
        "branch": "spaces"
      },
      "variables": {
        "path": "/var/lib/^^identifier^^",
        "exclude_from_backup": "true"
      }
    },
    {
      "descriptor": {
        "repository": "https://github.com/MarkRatjens/logrotate.git",
        "branch": "spaces"
      }
    }
  ],
  "user": {
    "identifier": "22006",
    "name": "mysql",
    "create": true
  },
  "stages": [
    {
      "starter": {
        "image": "engines/servicebase",
        "tag": "current"
      },
      "os_packages": [
        {
          "name": "mysql-server"
        },
        {
          "name": "mysql-client"
        }
      ],
      "ownership_and_permissions": [
        {
          "path": "/var/run/mysqld/",
          "recursive": false,
          "user": "mysql",
          "permissions": "700",
          "create": "dir"
        }
      ]
    }
  ]
}
